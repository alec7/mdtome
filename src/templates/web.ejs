<!DOCTYPE html>
<html lang="<%= language %>">
  <head>
    <meta charset="utf-8" />
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />

    <% Object.keys(metadata).forEach(function(name) { %>
      <% if (metadata[name]) { %>
        <meta name="<%= name %>" content="<%= metadata[name] %>" />
      <% } %>
    <% }) %>

    <% styles.forEach(function(style) { %>
      <link href="<%- style %>" rel="stylesheet" />
    <% }) %>
  </head>

  <body data-url="<%= url %>">
    <aside id="menu">
      <div id="search"></div>

      <nav>
        <%- menu %>
      </nav>
    </aside>

    <main>
      <header>
        <div class="title">
          <span><%= baseTitle %></span>
        </div>
        <div id="hamburger">
          <span>&#9776;</span>
        </div>
      </header>

      <section>
        <article id="article">
          <% if (addons.adsense.client && addons.adsense.slot) { %>
            <ins class="adsbygoogle" style="display:block"
                 data-full-width-responsive="true"
                 data-ad-format="auto"
                 data-ad-client="<%- addons.adsense.client %>"
                 data-ad-slot="<%- addons.adsense.slot %>"></ins>
          <% } %>

          <div id="page">
            <%- body %>
          </div>

        </article>

        <article id="search-results">
        </article>
      </section>
    </main>

    <% scripts.forEach(function(script) { %>
      <script src="<%- script %>"></script>
    <% }) %>

    <% if (addons.adsense.client && addons.adsense.slot) { %>
      <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
      <script>
        (adsbygoogle = window.adsbygoogle || []).push({});
      </script>
    <% } %>

    <% if (addons.ga.token) { %>
      <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

        ga('create', '<%- addons.ga.token %>', 'auto');
        ga('send', 'pageview');
      </script>
    <% } %>

  </body>
</html>
